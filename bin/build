#! /usr/bin/env bash

set -o nounset
set -o errexit
set -o pipefail
IFS=$'\n\t'

source "lib/utilities.sh"

version="${1:-latest}"

if docker build --load --tag "$(tag "$version")" .; then
  noti --title "Alchemists build ready: $(project)"
else
  noti --title "Alchemists build failed: $(project)"
fi
